<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp">

        <shape
            android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="#ffffff" />

            <solid
                android:color="#00000000" />

            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="2dp"
                android:bottom="3dp" />

        </shape>

    </item>

</layer-list>
